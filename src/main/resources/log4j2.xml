<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN" name="XMLConfigTest">
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="#1 %-5level %C{1}.%M %m %ex%n"/>
        </Console>
        <Console name="CONSOLE" target="SYSTEM_OUT">
            <PatternLayout pattern="#2 %-5level %logger{36} - %msg%n"/>
        </Console>
        <Console name="STD_OUT_LITE" target="SYSTEM_OUT">
            <PatternLayout pattern="#3 %C{1}.%M %m %ex%n"/>
        </Console>
        <Console name="ConsoleLite" target="SYSTEM_OUT">
            <PatternLayout
                    pattern="#4 %highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </Console>
        <RollingFile name="WroxFileAppender"
                     fileName="../logs/application.log"
                     filePattern="../logs/application-%d{MM-dd-yyyy}-%i.log">
            <PatternLayout>
                <pattern>%d{HH:mm:ss.SSS} [%t] %X{id} %X{username} %-5level %c{36} %l: %msg%n</pattern>
            </PatternLayout>
            <Policies>
                <SizeBasedTriggeringPolicy size="10 MB"/>
            </Policies>
            <DefaultRolloverStrategy min="1" max="4"/>
        </RollingFile>
    </Appenders>
    <Loggers>
        <!--		the ancestor of all Logger s-->
        <Root level="WARN" additivity="false">
            <AppenderRef ref="STDOUT"/>
        </Root>
        <Logger name="com.example.untitled" level="INFO" additivity="false">
            <AppenderRef ref="CONSOLE"/>
        </Logger>
        <Logger name="com.example.untitled.presentation" level="DEBUG" additivity="false">
            <AppenderRef ref="STD_OUT_LITE"/>
        </Logger>
        <Logger name="com.example.untitled.presentation.EmployeeRestController" level="DEBUG" additivity="false">
            <AppenderRef ref="WroxFileAppender"/>
        </Logger>
    </Loggers>
</Configuration>