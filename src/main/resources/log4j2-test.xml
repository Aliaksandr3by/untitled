<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="debug" name="XMLConfigTest" monitorInterval="10" packages="com.example.untitled">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5level %logger{36} - %msg%n"/>
		</Console>
		<Console name="STDOUT" target="SYSTEM_OUT">
			<PatternLayout pattern="%-5level %C{1}.%M %m %ex%n"/>
		</Console>
	</Appenders>
	<Loggers>
		<!--
			additivity property that determines whether an Appender adds to or overrides other inherited Appenders
		-->
		<Root level="WARN" additivity="true">
			<AppenderRef ref="STDOUT"/>
		</Root>
		<Logger name="com.example.untitled" level="info" additivity="true">
			<AppenderRef ref="Console"/>
		</Logger>
		<Logger name="com.example.untitled.presentation.EmployeeRestController" level="info" additivity="false">
			<AppenderRef ref="Console"/>
		</Logger>
	</Loggers>
</Configuration>